<?xml version="1.0" encoding="utf-8" ?>
<base:BaseContentPage
    x:Class="HB.FullStack.Client.Maui.Base.BaseModal"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:base="clr-namespace:HB.FullStack.Client.Maui.Base"
    Title="BaseModal">
    <base:BaseContentPage.Resources>
        <ControlTemplate x:Key="BaseModalTemplate">
            <StackLayout x:Name="BaseModalContainer">
                <Frame
                    x:Name="ModalFrame"
                    BackgroundColor="White"
                    CornerRadius="10"
                    HasShadow="True"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="CenterAndExpand"
                    WidthRequest="280">
                    <StackLayout>
                        <ContentPresenter />
                    </StackLayout>
                </Frame>
            </StackLayout>
        </ControlTemplate>
    </base:BaseContentPage.Resources>
</base:BaseContentPage>
