  <ItemGroup>
	  <PackageReference Include="SkiaSharp.Views.Forms" Version="2.80.2" />
	  <PackageReference Include="Svg.Skia" Version="0.5.6.1" />
	  <PackageReference Include="Xamarin.CommunityToolkit" Version="1.2.0-pre2" />
	  <PackageReference Include="Xamarin.CommunityToolkit.Markup" Version="1.2.0-pre2" />
	  <PackageReference Include="Xamarin.Essentials" Version="1.6.1" />
	  <PackageReference Include="Xamarin.Forms" Version="5.0.0.2012" />
	  <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="5.0.0" />
	  <PackageReference Include="Microsoft.Extensions.Http.Polly" Version="5.0.1" />
	  <PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="5.0.0" />
	  <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="5.0.0" />
	  <PackageReference Include="SkiaSharp.Extended" Version="1.60.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Common\" />
    <Folder Include="Renders\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\HB.FullStack.Database.ClientExtension\HB.FullStack.Database.ClientExtension.csproj" />
    <ProjectReference Include="..\..\HB.Infrastructure.IdGen\HB.Infrastructure.IdGen.csproj" />
    <ProjectReference Include="..\..\HB.Infrastructure.SQLite\HB.Infrastructure.SQLite.csproj" />
  </ItemGroup>

  <ItemGroup>
