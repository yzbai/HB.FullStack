<Project Sdk="Microsoft.NET.Sdk">
	<Import Project="..\..\..\common.props" />
  <PropertyGroup>
	<TargetFrameworks>netstandard2.1;netstandard2.0</TargetFrameworks>
	<ProduceReferenceAssembly>true</ProduceReferenceAssembly>
	  <LangVersion>Latest</LangVersion>
	  <Nullable>enable</Nullable>
	  <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
	  <WarningsAsErrors />
	  <EnableNETAnalyzers>true</EnableNETAnalyzers>
	  <AnalysisMode>AllEnabledByDefault</AnalysisMode>
  </PropertyGroup>

  <ItemGroup>
	<None Remove="Fonts\materialdesignicons-webfont.ttf" />
  </ItemGroup>

  <ItemGroup>
	<EmbeddedResource Include="Fonts\materialdesignicons-webfont.ttf" />
  </ItemGroup>

  <ItemGroup>
	  <PackageReference Include="SkiaSharp.Views.Forms" Version="2.80.3" />
	  <PackageReference Include="Svg.Skia" Version="0.5.11" />
	  <PackageReference Include="System.Numerics.Vectors" Version="4.5.0" />
	  <PackageReference Include="Xamarin.CommunityToolkit" Version="1.3.1" />
	  <PackageReference Include="Xamarin.CommunityToolkit.Markup" Version="1.3.1" />
	  <PackageReference Include="Xamarin.Essentials" Version="1.7.0" />
	  <PackageReference Include="Xamarin.Forms" Version="5.0.0.2291" />
	  <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="6.0.0" />
	  <PackageReference Include="Microsoft.Extensions.Http.Polly" Version="6.0.1" />
	  <PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="6.0.0" />
	  <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="6.0.0" />
	  <PackageReference Include="SkiaSharp.Extended" Version="1.60.0" />
  </ItemGroup>

  <ItemGroup>
	<Folder Include="Common\" />
	<Folder Include="Renders\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\HB.FullStack.Client\HB.FullStack.Client.csproj" />
  </ItemGroup>

  <ItemGroup>
	<EmbeddedResource Update="Base\BaseModalDialog.xaml">
	  <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
	</EmbeddedResource>
	<EmbeddedResource Update="Controls\TimeEditor.xaml">
	  <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
	</EmbeddedResource>
  </ItemGroup>
</Project>
