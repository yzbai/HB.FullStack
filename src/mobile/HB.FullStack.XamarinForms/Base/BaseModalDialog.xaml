<?xml version="1.0" encoding="utf-8" ?>
<base:BaseContentPage
    x:Class="HB.FullStack.XamarinForms.Base.BaseModalDialog"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:base="clr-namespace:HB.FullStack.XamarinForms.Base">
    <base:BaseContentPage.Resources>
        <ResourceDictionary>
            <ControlTemplate x:Key="DialogControlTemplate">
                <StackLayout x:Name="ModalDialogContainer">
                    <Frame
                        x:Name="ModalDialogFrame"
                        BackgroundColor="White"
                        CornerRadius="10"
                        HasShadow="True"
                        HorizontalOptions="CenterAndExpand"
                        VerticalOptions="CenterAndExpand"
                        WidthRequest="280">
                        <StackLayout>
                            <ContentPresenter />
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </ControlTemplate>
        </ResourceDictionary>
    </base:BaseContentPage.Resources>
</base:BaseContentPage>