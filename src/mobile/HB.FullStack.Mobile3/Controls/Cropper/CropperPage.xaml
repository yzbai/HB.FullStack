<?xml version="1.0" encoding="utf-8" ?>
<base:BaseContentPage
    x:Class="HB.FullStack.Mobile.Controls.Cropper.CropperPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:base="clr-namespace:HB.FullStack.Mobile.Base"
    xmlns:figure="clr-namespace:HB.FullStack.Mobile.Skia">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="BorderWidth" Value="0" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand"
            BackgroundColor="Black">
            <figure:SKFigureCanvasView
                x:Name="FigureCanvas"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                AutoBringToFront="False"
                EnableTimeTick="False"
                Figures="{Binding Figures}" />
            <Button
                HorizontalOptions="Start"
                Command="{Binding RotateCommand}"
                Text="旋转" />
            <StackLayout
                HorizontalOptions="FillAndExpand"
                Orientation="Horizontal">
                <Button
                    HorizontalOptions="StartAndExpand"
                    Command="{Binding CancelCommand}"
                    Text="取消" />
                <Button
                    HorizontalOptions="CenterAndExpand"
                    Command="{Binding ResetCommand}"
                    Text="重来" />
                <Button
                    HorizontalOptions="EndAndExpand"
                    Command="{Binding CropCommand}"
                    Text="确定" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</base:BaseContentPage>